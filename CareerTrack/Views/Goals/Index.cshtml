@model IEnumerable<CareerTrack.Models.Goal>

@{
    ViewData["Title"] = "My Goals";
    var now = DateTime.UtcNow;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">
            <i class="bi bi-bullseye"></i> My Goals
        </h1>
        <a asp-action="Create" class="btn btn-primary btn-lg">
            <i class="bi bi-plus-circle"></i> Create New Goal
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var goal in Model)
            {
                var daysRemaining = (goal.targetDate - now).Days;
                var progressPercentage = 0;
                if (goal.endDate != DateTime.MinValue && goal.endDate > goal.startDate)
                {
                    var totalDays = (goal.endDate.Value - goal.startDate).TotalDays;
                    var elapsedDays = (now - goal.startDate).TotalDays;
                    progressPercentage = (int)Math.Min(100, Math.Max(0, (elapsedDays / totalDays) * 100));
                }

                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm hover-card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <i class="bi bi-flag-fill text-primary"></i>
                                @goal.Name
                            </h5>

                            <p class="card-text text-muted">
                                @(string.IsNullOrEmpty(goal.Description) ? "No description" : goal.Description)
                            </p>

                            <hr>

                            <div class="mb-3">
                                <small class="text-muted">
                                    <i class="bi bi-calendar-event"></i> <strong>Start:</strong> @goal.startDate.ToString("MMM dd, yyyy")
                                </small>
                                <br>
                                <small class="text-muted">
                                    <i class="bi bi-calendar-check"></i> <strong>Target:</strong> @goal.targetDate.ToString("MMM dd, yyyy")
                                </small>
                            </div>

                            @if (daysRemaining > 0)
                            {
                                <div class="alert alert-info py-2 mb-3">
                                    <i class="bi bi-clock"></i> <strong>@daysRemaining</strong> days remaining
                                </div>
                            }
                            else if (daysRemaining == 0)
                            {
                                <div class="alert alert-warning py-2 mb-3">
                                    <i class="bi bi-exclamation-triangle"></i> Due today!
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-danger py-2 mb-3">
                                    <i class="bi bi-x-circle"></i> Overdue by @Math.Abs(daysRemaining) days
                                </div>
                            }

                            @if (progressPercentage > 0)
                            {
                                <div class="mb-3">
                                    <progress value="@progressPercentage" max="100" style="width: 100%; height: 8px;">
                                        @progressPercentage%
                                    </progress>
                                </div>
                                <small class="text-muted">Progress: @progressPercentage%</small>
                            }
                        </div>

                        <div class="card-footer bg-white border-0 pt-0">
                            <div class="d-flex gap-2">
                                <a asp-action="Details" asp-route-id="@goal.Id" class="btn btn-sm btn-outline-primary flex-fill">
                                    <i class="bi bi-eye"></i> View
                                </a>
                                <a asp-action="Edit" asp-route-id="@goal.Id" class="btn btn-sm btn-outline-secondary flex-fill">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-inbox" style="font-size: 4rem; color: #ccc;"></i>
            <h3 class="mt-3 text-muted">No goals yet</h3>
            <p class="text-muted">Start tracking your career goals by creating your first one!</p>
            <a asp-action="Create" class="btn btn-primary btn-lg mt-3">
                <i class="bi bi-plus-circle"></i> Create Your First Goal
            </a>
        </div>
    }
</div>

<style>
    .hover-card {
        transition: transform 0.2s, box-shadow 0.2s;
    }
    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
    }
</style>
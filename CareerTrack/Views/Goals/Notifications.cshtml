@{
    ViewData["Title"] = "Decorator Pattern Demo";
}

<h2>Decorator Pattern Demo</h2>

<div class="card mt-3">
    <div class="card-header">1. Basic Goal (No Decorators)</div>
    <div class="card-body">
        <p><strong>Description:</strong> @ViewBag.Demo1</p>
        <p class="text-muted"> SendReminder() and StatusNotification()</p>
    </div>
</div>

<div class="card mt-3">
    <div class="card-header">2. Goal + ReminderDecorator</div>
    <div class="card-body">
        <p><strong>Description:</strong> @ViewBag.Demo2</p>
        <p class="text-muted">SendReminder()</p>
    </div>
</div>

<div class="card mt-3">
    <div class="card-header">3. Goal + ReminderDecorator + NotificationDecorator</div>
    <div class="card-body">
        <p><strong>Description:</strong> @ViewBag.Demo3</p>
        <p class="text-muted">Both decorators</p>
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary mt-3">Back to Goals</a>